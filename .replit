modules = ["python-3.11", "web", "flutter"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["freetype", "glibcLocales", "libxcrypt", "postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastAPI Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter Web"

[[workflows.workflow]]
name = "FastAPI Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && uv run uvicorn app.main:app --host 0.0.0.0 --port 5000 --reload"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Flutter Web"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd flutter_app && flutter run -d web-server --web-hostname 0.0.0.0 --web-port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["uvicorn", "backend.app.main:app", "--host", "0.0.0.0", "--port", "5000"]
