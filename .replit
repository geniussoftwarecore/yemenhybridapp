modules = ["python-3.11", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["freetype", "glibcLocales", "libxcrypt", "postgresql", "flutter"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter Web"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastAPI Server"

[[workflows.workflow]]
name = "Flutter Web"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd flutter_app && flutter run -d web-server --web-hostname 0.0.0.0 --web-port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "FastAPI Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && uv run uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload"
waitForPort = 8000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 36457
externalPort = 3002

[[ports]]
localPort = 39165
externalPort = 3001

[[ports]]
localPort = 41327
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd backend && uv run uvicorn app.main:app --host=0.0.0.0 --port=5000"]
build = ["bash", "-c", "cd flutter_app && flutter build web --web-renderer html"]
